doctype html
html
  head
    meta(charset='UTF-8')
    title
    style(type='text/css').
      html, body{
      width: 100%;
      height: 100%;
      padding: 0;
      margin: 0;
      background-image: url(../images/bg.jpg);
      background-size: 100% 100%;
      background-attachment: fixed;
      font-family: 微软雅黑    ,  "microsoft yahei";
      }
      #bg{
      height: 100%;
      width: 100%;
      filter: blur(15px);
      background-image: url(../images/bg.jpg);
      background-size: 100% 100%;
      background-attachment: fixed;
      }
      #container{
      position: absolute;
      height: 50%;
      width: 50%;
      top: 25%;
      left: 25%;
      text-align: center;
      color: #332303;
      }
      #tag{
      font-size: 70px;
      line-height: 0px;
      font-weight: bold;
      }
      #msg{
      font-size: 30px;
      line-height: 0px;
      font-weight: bold;
      }
